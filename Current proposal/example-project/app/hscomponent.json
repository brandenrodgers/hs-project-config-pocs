{
  "type": "app",
  "name": "Example public app",
  "uid": "example_public_app",
  "data": {
    "public": true,
    "description": "This is an example public app.",
    "scopes": ["crm.objects.contacts.read"],
    "auth": {
      "redirectUrls": ["http://app.domain.com/oauth"],
      "requiredScopes": ["oauth", "content"]
    },
    "allowedUrls": ["http://app.domain.com"],
    "extensions": [
      {
        "name": "Example CRM Card",
        "file": "extensions/ExampleCard.jsx"
      }
    ],
    "webhooks": {
      "settings": {
        "targetUrl": "https://example.com/webhook",
        "maxConcurrentRequests": 10
      },
      "subscriptions": {
        "crmObjects": [
          {
            "subscriptionType": "object.propertyChange",
            "objectName": "contact",
            "propertyName": "firstname",
            "active": true
          }
        ]
      }
    },
    "constants": {
      "API_DOMAIN": "http://app.domain.com"
    }
  }
}
